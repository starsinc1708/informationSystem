<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://requestBrowse.caption"
        focusComponent="requestsTable">
    <data readOnly="true">
        <collection id="requestsDc"
                    class="com.company.informationsystem.entity.Request">
            <fetchPlan extends="_base">
                <property name="initiator" fetch="JOIN" fetchPlan="_base"/>
                <property name="executor" fetchPlan="_base">
                    <property name="department" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="requestsDl">
                <query>
                    <![CDATA[select e from Request e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="requestsTable" spacing="true">
        <filter id="filter"
                dataLoader="requestsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="requestsTable"
                    width="100%"
                    dataContainer="requestsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="status"/>
                <column id="description"/>
                <column id="openDate"/>
                <column id="closeDate"/>
                <column id="executor"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="requestsTable.create"/>
                <button id="editBtn" action="requestsTable.edit"/>
                <button id="removeBtn" action="requestsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
